<div class="container bg-light card mt-3 width: 300px;">
  <%= simple_form_for restaurant do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name  %>
      <%= f.input :address %>
      <%= f.input :category, as: :select, collection: ["chinese", "italian", "japanese", "french", "belgian"].sort, include_blank: false %>
    </div>

    <div class="form-actions btn btn-dark mb-2">
      <%= f.button :submit, class: "text-light" %>
    </div>
  <% end %>
</div>
