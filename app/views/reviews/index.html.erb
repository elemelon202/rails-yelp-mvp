<div class="container m-3">
  <% @reviews.each do |r| %>
  <div class="card-product">
    <div class="card-product-infos">
      <h2><%= r.rating %> stars</h2>
      <p><%= r.content %></p>
    </div>
  </div>
  <% end %>
  <%= link_to "Back to restaurant page", restaurant_path(@restaurant), class: "btn btn-dark mt-2" %>
  <%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-dark mt-2" %>
</div>
